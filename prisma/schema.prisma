generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Card {
  id         String   @id @unique @default(uuid())
  url        String
  title      String
  note       String?
  detail     String?
  tags       Tag[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Tag {
  id    Int    @id @unique @default(autoincrement())
  name  String @unique
  cards Card[]
}
